# S3 Backup Environment Variables Example
# Copy this file to .env and fill in your values

# Backup Configuration
# Comma-separated list of directories to backup
BACKUP_DIRS=/path/to/documents,/path/to/photos

# Backup subdirectories recursively (true/false)
BACKUP_RECURSIVE=true

# Cron schedule for automatic backups (optional)
# If not set, runs as a one-time backup
# Format: "minute hour day month weekday"
# Examples:
#   "0 0 * * *"    - Every day at midnight
#   "0 0 */3 * *"  - Every 3 days at midnight
#   "0 2 * * 0"    - Every Sunday at 2 AM
#   "*/30 * * * *" - Every 30 minutes
# BACKUP_CRON_SCHEDULE="0 0 */3 * *"  # Uncomment to enable scheduled backups

# AWS Configuration
AWS_REGION=us-west-2
S3_BUCKET=my-backup-bucket

# AWS Credentials
# These can also be loaded from ~/.aws/credentials
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Optional: Path to YAML config file
# If set, environment variables override YAML settings
# S3_BACKUP_CONFIG_FILE=/path/to/config.yaml
